<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <context:component-scan base-package="com.educsystem"/>
    <context:annotation-config/>

    <bean id="UserDao" class="com.educsystem.database.dao.UserDao"></bean>
    <bean id="UserService" class="com.educsystem.services.UserService"></bean>

    <bean id="LessonsDao" class="com.educsystem.database.dao.LessonsDao"></bean>
    <bean id="LessonsService" class="com.educsystem.services.LessonsService"></bean>

    <bean id="ChapterDao" class="com.educsystem.database.dao.ChapterDao"></bean>
    <bean id="ChapterService" class="com.educsystem.services.ChapterService"></bean>
</beans>